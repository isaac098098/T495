ctrl + shift + b
    rofi -show search_book -config $HOME/.config/rofi/short.rasi -modes "search_book:$HOME/.config/rofi/scripts/search_book.sh"

ctrl + shift + d
    rofi -show select_books -config $HOME/.config/rofi/short.rasi -modes "select_books:$HOME/.config/rofi/scripts/select_books.sh"

ctrl + shift + e
    rofi -show edit_card -config $HOME/.config/rofi/long.rasi -modes "edit_card:$HOME/.config/rofi/scripts/edit_card.sh"

ctrl + shift + i
    rofi -show select_zettelkasten -config $HOME/.config/rofi/short.rasi -modes "select_zettelkasten:$HOME/.config/rofi/scripts/select_zettelkasten.sh"

ctrl + shift + m
    rofi -show create_card -config $HOME/.config/rofi/long.rasi -modes "create_card:$HOME/.config/rofi/scripts/create_card.sh"

ctrl + shift + o
    rofi -markup-rows -show edit_notes -config $HOME/.config/rofi/long.rasi -modes "edit_notes:$HOME/.config/rofi/scripts/edit_notes.sh"

ctrl + shift + p
    rofi -show compile_notes -config $HOME/.config/rofi/long.rasi -modes "compile_notes:$HOME/.config/rofi/scripts/compile_notes.sh"

ctrl + shift + q
    rofi -show delete_card -config $HOME/.config/rofi/long.rasi -modes "delete_card:$HOME/.config/rofi/scripts/delete_card.sh"

ctrl + shift + s
    rofi -show select_notes -config $HOME/.config/rofi/short.rasi -modes "select_notes:$HOME/.config/rofi/scripts/select_notes.sh"

ctrl + shift + u
    zathura $HOME/notes/current-notes/main.pdf

ctrl + shift + w
    rofi -show swap_cards -config $HOME/.config/rofi/long.rasi -modes "swap_cards:$HOME/.config/rofi/scripts/swap_cards.sh"

ctrl + shift + x
    rofi -show insert_card -config $HOME/.config/rofi/long.rasi -modes "insert_card:$HOME/.config/rofi/scripts/insert_card.sh"

ctrl + shift + y
    zathura $HOME/zettelkasten/current/main.pdf

alt + y
    $HOME/.local/bin/open_todo.sh
