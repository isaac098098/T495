* {
    crust:  #282E39;
    bg0:    #3B4252;
    fg0:    #D8DEE9;
    orange: #EBCB8B;
    blue:   #5E81AC;
}

element-text, element-icon , mode-switcher {
    background-color: inherit;
    text-color:       inherit;
}

window {
	width: 21%;
	height: 32%;
    border: 0px;
    border-radius: 0px;
    border-color: @crust;
    background-color: @bg0;
}

mainbox {
    background-color: @bg0;
}

inputbar {
    children: [prompt,entry];
    background-color: @crust;
}

prompt {
    background-color: @orange;
    padding: 7px;
    text-color: @crust;
    border-radius: 0px;
}

textbox-prompt-colon {
    expand: false;
    str: ":";
}

entry {
    padding: 7px;
    text-color: @fg0;
    background-color: @crust;
}

listview {
    background-color: @bg0;
}

element {
    padding: 7px;
    background-color: @bg0;
    text-color: @fg0;
}

element selected {
    background-color:  @orange ;
    text-color: @bg0;
	border-radius: 0px;
}

mode-switcher {
    spacing: 0;
}

button {
    background-color: @bg0;
    text-color: @fg0;
    vertical-align: 0.5; 
    horizontal-align: 0.5;
}

button selected {
    background-color: @bg0;
  	text-color: @blue;
}

message {
    text-color: @fg0;
    background-color: @orange;
}

textbox {
    text-color: @blue;
    vertical-align: 0.5;
    horizontal-align: 0.5;
    background-color: @bg0;
}
